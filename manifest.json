{
  "name": "eZDebug Helper",
  "description": "Web Developer Toolbar panels for eZPublish (4.5+) websites developers.",
  "version": "0.30",
  "minimum_chrome_version": "10.0",
  "permissions": [
    "tabs", "http://*/*"
  ],
  "update_url": "http://ezdebughelper.makingsoftware.pl/updates/eZDebugHelper.xml",
  "icons": {
     "16": "img/icon_16.png",
     "48": "img/icon_48.png"
  },
  "background_page": "background.html",
  "devtools_page": "devtools.html",
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css" : ["css/debug_toolbar.css", "css/ui-lightness/jquery-ui-1.8.18.custom.css"],
      "js" : ["js/lib/jquery-1.7.1.min.js",
              "js/lib/jquery-ui-1.8.18.custom.min.js",
              "js/classes/Settings.class.js",
              "js/classes/MessagesList.class.js",
              "js/classes/TemplateCommentReader.class.js",
              "js/classes/PopupPositioner.class.js",
              "js/classes/TemplatesList.class.js",
              "js/contentscript.js"]
    }
  ]
}

